<!DOCTYPE html>
<html>

<body>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" type="text/css">
  <link rel="stylesheet" href="styles/custom.css" type="text/css">
  <link rel="stylesheet" href="styles/theme.css" type="text/css"> </head>

<div class="row">

	<%  _.each(games,function(popular){ %>
	<div class="col-md-3">
          <img class="img-fluid d-block" src="<%= popular.photo_url %>">
          <div class="row">
            <div class="col-md-6">
              <h6 class="py-1 m-0 text-left"><%= popular.game_name %></h6>
            </div>
            <div class="col-md-6">
              <h6 class="text-right m-0 py-1"><%= popular.harga %>
                <br> </h6>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6 text-left">
              <i class="fa fa-star"></i>
              <i class="fa fa-star"></i>
              <i class="fa fa-star"></i>
              <i class="fa fa-star"></i>
              <i class="fa fa-star"></i>
            </div>
            <div class="col-md-6 text-right">
              <a class="btn btn-success btn-sm" href="#">Add</a>
            </div>
          </div>
        </div>

    <%})%>   


</div>

<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" crossorigin="anonymous" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"></script>
